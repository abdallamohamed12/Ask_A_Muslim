<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 1) Horizontal gradient from green → white -->
    <gradient
        android:angle="0"
        android:startColor="#CFEED2"
        android:endColor="#E1F4EB"
        android:type="linear" />

    <!-- 2) Rounded corners for the pill shape -->
    <corners android:radius="20dp" />

    <!-- 3) Thin green stroke around the pill -->
    <stroke
        android:width="1dp"
        android:color="@color/white" />

    <!-- 4) Optional content padding so text isn’t flush to edges -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="6dp"
        android:bottom="6dp" />
</shape>

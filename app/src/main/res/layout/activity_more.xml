<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"

    >

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Options"
        android:textSize="24sp"
        android:textColor="#000000"
        android:padding="16dp"
        android:gravity="center"
        android:layout_margin="30dp" />

    <!-- Menu Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/profileId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="18sp"
            android:textColor="#000000"
            android:padding="12dp"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/profile_more_btn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="qilah (Coming Soon)"
            android:textSize="18sp"
            android:textColor="#000000"
            android:padding="12dp"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/qiblah_more_btn"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/azkar"
            android:textSize="18sp"
            android:textColor="#000000"
            android:padding="12dp"
            android:id="@+id/azkarId"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/sebha_more_btn"

            />





    </LinearLayout>
</LinearLayout>
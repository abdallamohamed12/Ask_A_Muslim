<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:layout_margin="20dp">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileEditIcon"
        android:src="@drawable/profile"
        android:layout_marginBottom="30dp"
        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Edit your First Name: "
    android:textColor="@color/black"
    android:textSize="16sp"
    android:layout_below="@id/profileEditIcon"
    android:id="@+id/editFirstName_textView"
    android:layout_marginTop="30dp"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:inputType="text"
        android:hint="First Name "
        android:layout_marginTop="30dp"
        android:autofillHints="name"
        android:id="@+id/editFirstName_EditView"
        android:layout_alignBaseline="@id/editFirstName_textView"
     android:layout_toEndOf="@id/editFirstName_textView"
        android:background="@drawable/edit_view_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your Last Name: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/editLastName_textView"
        android:layout_marginTop="30dp"
        android:layout_below="@id/editFirstName_textView"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editFirstName_EditView"
        android:layout_alignParentTop="true"
android:inputType="text"
 android:layout_alignBaseline="@id/editLastName_textView"

        android:layout_toEndOf="@id/editLastName_textView"
        android:autofillHints="name"
        android:background="@drawable/edit_view_background"
        android:hint="Last Name "

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your E-mail: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/editEmail_textView"
        android:layout_marginTop="30dp"
        android:layout_below="@id/editLastName_textView"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:inputType="textEmailAddress"
        android:hint="E-mail "
        android:layout_marginTop="20dp"
        android:autofillHints="name"
        android:id="@+id/editEmail_editView"
        android:layout_toEndOf="@id/editEmail_textView"
        android:background="@drawable/edit_view_background"
        android:layout_below="@id/editLastName_textView"
        android:layout_alignBaseline="@id/editEmail_textView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your Password: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/editPassword_textView"
        android:layout_marginTop="30dp"
        android:layout_below="@id/editEmail_textView"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Password"
android:inputType="textPassword"
        android:autofillHints="name"
        android:id="@+id/editPassword_editView"
        android:layout_toEndOf="@id/editPassword_textView"
        android:background="@drawable/edit_view_background"

        android:layout_alignBaseline="@id/editPassword_textView"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Confirm Changes"
        android:id="@+id/ConfirmEditBtn"
        android:background="@drawable/semi_round_green_button"


        android:layout_marginBottom="20dp"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_centerInParent="true"
        android:id="@+id/deleteAccountBtn"
        android:text="Delete Your Account"
        android:textAllCaps="false"
android:layout_below="@id/ConfirmEditBtn"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:background="@drawable/semi_round_green_button"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/ConfirmEditBtn"
        android:background="@drawable/tab_container_divider"
        />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/courseItemRoot_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/cards_outline_grey"
    android:layout_marginBottom="15dp"

    android:layout_marginTop="30dp"

    >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/thumbnailUrl_ID_profile"
            android:contentDescription="Course Thumnail"

            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/courseTitle_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/courseInstructor_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Instructor Name"
            android:textSize="14sp"
android:textAlignment="center"
            android:textColor="@color/black"/>


    <!-- Action button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="20dp"
        >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/courseContinueButton_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
android:layout_marginBottom="20dp"
        android:text="@string/Continue"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:background="@drawable/semi_round_green_button"

        android:textColor="@android:color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/courseUnenrollButton_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unenroll"
android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:textAllCaps="false"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@id/courseContinueButton_profile"
        android:background="@drawable/semi_round_green_button"
        android:textColor="@android:color/white"/>

    </RelativeLayout>

</LinearLayout>

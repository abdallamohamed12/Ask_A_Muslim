<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/courseItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/cards_outline_grey"
    android:layout_marginBottom="15dp"
    android:gravity="center_vertical"
    android:layout_marginTop="30dp"

    >

    <!-- Titles & instructor stack -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/courseInstructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Instructor Name"
            android:textSize="14sp"

            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Action button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/courseActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textAllCaps="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/semi_round_green_button"
        android:textColor="@android:color/white"/>
</LinearLayout>
